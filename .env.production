# Production Environment Variables for DDAS with FastAPI Backend

# FastAPI Backend Configuration
VITE_API_BASE_URL=https://your-api-domain.com/api/v1
VITE_WS_BASE_URL=wss://your-api-domain.com/ws

# Application Configuration
VITE_APP_NAME=DDAS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Digital Daily Account System"

# Authentication Configuration
VITE_JWT_TOKEN_KEY=ddas_auth_token
VITE_REFRESH_TOKEN_KEY=ddas_refresh_token
VITE_USER_DATA_KEY=ddas_user_data
VITE_COMPANY_ID_KEY=ddas_company_id

# Indian Business Configuration
VITE_DEFAULT_CURRENCY=INR
VITE_DEFAULT_COUNTRY=India
VITE_DEFAULT_TIMEZONE=Asia/Kolkata
VITE_DEFAULT_LOCALE=en-IN

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,csv,xlsx,docx
VITE_UPLOAD_ENDPOINT=/files/upload

# UI Configuration
VITE_ITEMS_PER_PAGE=20
VITE_MAX_ITEMS_PER_PAGE=100
VITE_DEFAULT_THEME=light

# Features Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# External Services
VITE_RAZORPAY_KEY_ID=your_production_razorpay_key
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id

# Production Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error
VITE_ENABLE_MOCK_API=false
VITE_API_TIMEOUT=30000

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_PREFETCH_ROUTES=true
VITE_CACHE_DURATION=600000

# Security Configuration
VITE_ENABLE_CSRF_PROTECTION=true
VITE_SECURE_COOKIES=true
VITE_SAME_SITE_COOKIES=strict
